---
const { itemLength } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
  {
    Array.from({ length: itemLength }).map((_) => (
      <div class="rounded-xl border border-gray-200">
        <div class="w-full h-64 bg-gray-300 rounded-lg animate-pulse" />

        <div class="flex items-center justify-center flex-col p-2">
          <div class="mt-3 h-6 w-32 bg-gray-300 rounded animate-pulse" />

          <div class="mt-2 h-6 w-16 bg-gray-300 rounded animate-pulse" />
        </div>
      </div>
    ))
  }
</div>
