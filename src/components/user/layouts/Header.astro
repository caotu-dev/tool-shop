---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Menu, Search, X } from "lucide-react";
import { ThemeMode } from "./ThemeMode";
import AdminDashboardButton from './AdminDashboardButton.astro'

const url = new URL(Astro.request.url);
const keyword = url.searchParams.get("keyword");

---

<style>
  .toggle-menu .x-icon{
    display: none;
  }
  .isToggle .x-icon{
    display: block;
  }
  .isToggle .menu-icon{
    display: none;
  }
</style>

<header class="w-full px-6 py-4 bg-white dark:bg-[#1a1a1a] shadow-md">
  <div class="flex items-center justify-between gap-4">
    {/* Left: Logo */}
    <a href="/" class="text-xl font-bold text-black dark:text-white">
      ShopLogo
    </a>

    {/* Center: Search */}
    <div class="flex-1 max-w-md mx-4 hidden md:block relative">
      <form action="/products/search" class="flex gap-2">
        <Input type="search" name="keyword" value={keyword} placeholder="Search products..." className="px-4 py-2" />
        <Button
          size="icon"
          type="submit"
        >
          <Search className="w-5 h-5" />
        </Button>
      </form>
    </div>

    {/* Right: Buttons */}
    <div class="flex items-center gap-2 md:gap-4">
      {/* Desktop Nav */}
      <nav
        class="hidden md:flex gap-4 text-sm items-center font-medium text-gray-700 dark:text-gray-300"
      >
        <a href="/" class="hover:text-black dark:hover:text-white"> Home</a>
        <a href="/products" class="hover:text-black dark:hover:text-white">
          Products
        </a>
        <a href="/about" class="hover:text-black dark:hover:text-white">
          About
        </a>
        <AdminDashboardButton server:defer />
      </nav>

      <ThemeMode client:only />

      {/* Mobile Hamburger Button */}
      <Button
        size="icon"
        variant="ghost"
        className="md:hidden toggle-menu"
        aria-label="Toggle mobile menu"
        id="mobile-menu"
      >
        <X className="w-5 h-5 x-icon" />
        <Menu className="w-5 h-5 menu-icon" />
      </Button>
    </div>
  </div>

  {/* Mobile Menu */}
  <div id="mobile-nav-wrapper" class="hidden">
    <nav class="md:hidden mt-2 flex flex-col gap-2 text-sm font-medium text-gray-700 dark:text-gray-300">
      <Input
        type="search"
        placeholder="Search products..."
        class="mb-2"
      />
      <a href="/" class="hover:text-black dark:hover:text-white">
        Home
      </a>
      <a
        href="/products"
        class="hover:text-black dark:hover:text-white"
      >
        Products
      </a>
      <a href="/about" class="hover:text-black dark:hover:text-white">
        About
      </a>
    </nav>
  </div>
</header>

<script>
    document.querySelector('#mobile-menu').addEventListener('click', (e) => {
      e.target.classList.toggle("isToggle");
      document.querySelector('#mobile-nav-wrapper').classList.toggle("hidden");
    })
</script>
